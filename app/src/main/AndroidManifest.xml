<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digitalteacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.DigitalTeacherApplication"
        android:allowBackup="true"
        android:icon="@drawable/iapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.HomeScreenActivity"
            android:label="@string/title_activity_home_screen" />
        <activity
            android:name=".activity.NotesActivity"
            android:parentActivityName=".activity.HomeScreenActivity" />
        <activity
            android:name=".activity.OsActivity"
            android:parentActivityName=".activity.HomeScreenActivity" />
        <activity
            android:name=".activity.CppActivity"
            android:parentActivityName=".activity.HomeScreenActivity" />
        <activity
            android:name=".activity.DsaActivity"
            android:parentActivityName=".activity.HomeScreenActivity" />
        <activity android:name=".activity.GoogleSignInActicity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>